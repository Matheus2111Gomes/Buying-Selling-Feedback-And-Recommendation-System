datasource db {
  provider = "postgresql" 
  url      = env("DATABASE_URL")
}


generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "linux-musl-openssl-3.0.x"]
}
model User {
  id        String   @id @default(uuid())
  name      String
  email     String   @unique
  password  String
  isSeller  Boolean
  productsBuy String[]
  balance   Float
  createdAt DateTime @default(now())
  feedbacks Feedback[]
}

model Feedback {
  id        String   @id @default(uuid())
  userId    String
  productId String
  rating    Int
  comment   String
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id])
}

model Product {
  id           String   @id @default(uuid())
  name         String
  description  String
  category     Int
  sellerId     String
  howManyHas   Int
  price        Float
  createdAt    DateTime @default(now())
}

model Operation {
  id           String   @id @default(uuid())
  type         Int
  data         String
  createdAt    DateTime @default(now())
}
